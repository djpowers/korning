<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Account Number</th>
      <th>Website Address</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.account_number %></td>
        <td><%= link_to customer.web_address, customer.web_address %></td>
      </tr>
    <% end %>
  </tbody>
</table>
