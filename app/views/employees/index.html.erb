<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to employee.full_name, "/employees/#{employee.id}"  %></td>
        <td><%= link_to employee.email, "mailto:#{employee.email}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
